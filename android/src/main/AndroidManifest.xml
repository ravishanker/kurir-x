<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.com.crazybean.mobilex.kurir">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MobilexApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_logo"
        android:roundIcon="@mipmap/ic_circular_logo"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity android:name=".modules.auth.login.impl.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modules.auth.signup.impl.SignupActivity" />

        <activity android:name=".modules.chat.impl.ChatActivity" />

        <activity android:name=".modules.dashboard.impl.DashboardActivity" />

        <activity android:name=".modules.explore.impl.ExploreActivity" />

        <activity android:name=".modules.details.impl.DetailsActivity" />
        <service
            android:name=".modules.firebase.CloudMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>