<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar"/>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_tiny</item>
        <item name="android:layout_marginEnd">@dimen/margin_tiny</item>
    </style>

    <!-- Button Style -->
    <style name="Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Editor Style -->
    <style name="Editor" parent="Widget.AppCompat.EditText" />

    <style name="Editor.Password" parent="Editor">
        <item name="android:inputType">textPassword</item>
    </style>

</resources>
